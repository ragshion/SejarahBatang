<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_centerVertical="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_km_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Komentator"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent3"/>

    <TextView
        android:id="@+id/tv_km_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/accent"/>


    <TextView
        android:id="@+id/tv_km_isi"
        android:text="Isi Komen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_km_tanggal"
        android:text="Isi Komen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="14sp"
        android:textStyle="italic"/>

    <View style="@style/Divider"/>

    <TextView
        android:text="Admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="14sp"
        android:id="@+id/tv_admin"
        android:textColor="@color/colorAccent3"/>

    <TextView
        android:id="@+id/tv_tanggapan"
        android:text="Mantapp lurr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="14sp"
        android:textColor="@color/md_blue_800"/>

    <View style="@style/Divider" android:id="@+id/admin_divider"/>


</LinearLayout>