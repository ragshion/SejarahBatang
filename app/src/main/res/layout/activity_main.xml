<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/imageslider"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:theme="@style/AppTheme.AppBarOverlay"
                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    />

            </com.daimajia.slider.library.SliderLayout>

            <TextView
                android:id="@+id/tv_arjati"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@color/colorTextDefault"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_marginBottom="8dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cardBangunan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imageBangunan"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_launcher_round" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/imageBangunan"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_bangunan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bangunan"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                        <TextView
                            android:id="@+id/tv_tahun_bangunan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Periode 1800 - 1945"
                            android:textColor="@color/md_grey_500"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardMasjid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imageMasjid"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_launcher_round" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/imageMasjid"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_masjid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masjid"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                        <TextView
                            android:id="@+id/tv_tahun_masjid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Periode 1628 - 1945"
                            android:textColor="@color/md_grey_500"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardMakam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageMakam"
                        android:layout_width="64dp"
                        android:layout_height="59dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_launcher_round" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/imageMakam"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_makam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makam"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                        <TextView
                            android:id="@+id/tv_tahun_makam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Periode 1600 - 1945"
                            android:textColor="@color/md_grey_500"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardGoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageGoa"
                        android:layout_width="64dp"
                        android:layout_height="59dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:src="@mipmap/ic_launcher_round" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/imageGoa"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_goa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goa"
                            android:textColor="@color/accent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                        <TextView
                            android:id="@+id/tv_tahun_goa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Periode 1600 - 1945"
                            android:textColor="@color/md_grey_500"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>